# Backend Environment Configuration Template
# Copy this file to backend/.env and update the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Database type: 'sqlite' or 'postgresql'
DB_TYPE=sqlite

# SQLite Configuration (default)
DB_PATH=./data/ideas_tracker.db
DB_READONLY=false

# PostgreSQL Configuration (uncomment to use PostgreSQL)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ideas_tracker
# DB_USER=ideas_tracker_user
# DB_PASSWORD=your_secure_database_password_here

# For production PostgreSQL, consider using connection pooling
# DB_MAX_CONNECTIONS=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=2000

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate secure secrets using: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_minimum_32_characters_long

# Token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# For production, use your actual domain
# FRONTEND_URL=https://yourdomain.com

# ==============================================
# RATE LIMITING
# ==============================================
# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Stricter limits for authentication endpoints
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# For production, use absolute paths
# LOG_FILE=/opt/ideas-tracker/logs/app.log

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
# For caching and session storage
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size in bytes (5MB)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=./uploads

# For production, use absolute paths
# UPLOAD_DIR=/opt/ideas-tracker/uploads

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Enable HTTPS in production
# FORCE_HTTPS=true

# Session secret for additional security
SESSION_SECRET=your_session_secret_key_here

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Metrics collection
# METRICS_ENABLED=true
# METRICS_PORT=9090

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Only for development
DEBUG=false

# Hot reload for development
# HOT_RELOAD=true
# Frontend Environment Configuration Template
# Copy this file to frontend/.env and update the values

# ==============================================
# API CONFIGURATION
# ==============================================
# Backend API URL
VITE_API_URL=http://localhost:3001/api

# For production, use your actual domain
# VITE_API_URL=https://yourdomain.com/api

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
VITE_APP_NAME=Ideas Tracker
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A modern platform for collecting and voting on innovative ideas

# ==============================================
# BRANDING CONFIGURATION
# ==============================================
# Company/Organization name
VITE_COMPANY_NAME=Your Company

# Support email
VITE_SUPPORT_EMAIL=support@yourdomain.com

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_VOTING=true
VITE_ENABLE_TAGS=true
VITE_ENABLE_SEARCH=true

# Admin features
VITE_ENABLE_ADMIN_PANEL=true

# ==============================================
# UI CONFIGURATION
# ==============================================
# Theme settings
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_TOGGLE=true

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# ==============================================
# SOCIAL MEDIA CONFIGURATION
# ==============================================
# Social media links (optional)
# VITE_TWITTER_URL=https://twitter.com/yourcompany
# VITE_GITHUB_URL=https://github.com/yourcompany/ideas-tracker
# VITE_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================
# Google Analytics (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Other analytics services
# VITE_MIXPANEL_TOKEN=your_mixpanel_token
# VITE_HOTJAR_ID=your_hotjar_id

# ==============================================
# ERROR TRACKING
# ==============================================
# Sentry for error tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Development server configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Mock API for development
# VITE_USE_MOCK_API=false

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Enable service worker for caching
VITE_ENABLE_SERVICE_WORKER=true

# Lazy loading configuration
VITE_ENABLE_LAZY_LOADING=true

# Image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Content Security Policy
VITE_CSP_ENABLED=true

# Enable HTTPS redirect in production
# VITE_FORCE_HTTPS=true

# ==============================================
# LOCALIZATION CONFIGURATION
# ==============================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Available languages
VITE_AVAILABLE_LANGUAGES=en,es,fr,de

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================
# Toast notification settings
VITE_TOAST_DURATION=4000
VITE_TOAST_POSITION=top-right

# Browser notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# ==============================================
# UPLOAD CONFIGURATION
# ==============================================
# File upload settings
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ==============================================
# SEARCH CONFIGURATION
# ==============================================
# Search settings
VITE_SEARCH_MIN_CHARACTERS=3
VITE_SEARCH_DEBOUNCE_MS=300

# ==============================================
# VALIDATION CONFIGURATION
# ==============================================
# Form validation settings
VITE_MIN_IDEA_TITLE_LENGTH=5
VITE_MAX_IDEA_TITLE_LENGTH=200
VITE_MIN_IDEA_DESCRIPTION_LENGTH=10
VITE_MAX_IDEA_DESCRIPTION_LENGTH=2000
VITE_MAX_TAGS_PER_IDEA=5

# Comment validation
VITE_MIN_COMMENT_LENGTH=1
VITE_MAX_COMMENT_LENGTH=1000